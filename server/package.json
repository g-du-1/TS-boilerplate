{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "TS Boilerplate",
  "main": "app.js",
  "scripts": {
    "start": "node --inspect=0.0.0.0:9229 ./dist/app.js",
    "dev": "nodemon --config nodemon.json -L -e ts --exec \"npm run lint && npm run build && npm run test && npm start\"",
    "dev:all": "concurrently \"npm run dev\" \"cd ../client && npm run dev\"",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-du-1/TS-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/g-du-1/TS-boilerplate/issues"
  },
  "homepage": "https://github.com/g-du-1/TS-boilerplate#readme",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.7.23",
    "@types/nodemon": "^1.19.2",
    "@types/pg": "^8.6.5",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "pg": "^8.8.0"
  }
}
